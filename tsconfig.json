{
  "compilerOptions": {
    // ESSENTIAL FIXES FOR TS5096
    "noEmit": true,                     // ← ADD THIS
    "emitDeclarationOnly": false,

    // ESM/TS COMPATIBILITY FIXES
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true, // ← now allowed because of noEmit

    // BASE CONFIGURATION
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["server.ts", "Rag.ts", "data/**/*"]
}
