{
  "compilerOptions": {
    // ------------------- ESSENTIAL FIXES FOR TS5096 -------------------
    // Setting this to false allows TypeScript to output JS files (.js).
    // This resolves the TS5096 error by telling the compiler what to emit.
    "declaration": false, 
    "emitDeclarationOnly": false, 
    
    // ------------------- ESM/TS COMPATIBILITY FIXES -------------------
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true, 
    
    // ------------------- BASE CONFIGURATION -------------------
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false, 
    "skipLibCheck": true
  },
  "include": ["server.ts", "Rag.ts", "data/**/*"]
}
